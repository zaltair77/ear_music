<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<%= link_to 'Dashboard', "/" %>

<table class="database-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Pic</th>
      <th>Genre</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><img class="database-img" src="<%= artist.pic %>" alt="" /></td>
        <td><%= artist.name %></td>
        <td><%= artist.genre %></td>
        <td><%= artist.about %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>
