<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<%= link_to 'Dashboard', "/" %>

<table class="database-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Track No.</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Length</th>
      <th>Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.track_num %></td>
        <td><%= song.artist %></td>
        <td><%= song.album %></td>
        <td><%= song.length %></td>
        <td><%= song.favorite %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path %>
