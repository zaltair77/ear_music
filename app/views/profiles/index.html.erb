<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<%= link_to 'Dashboard', "/" %>

<table class="database-table">
  <thead>
    <tr>
      <th>Pic</th>
      <th>Cover image</th>
      <th>Username</th>
      <th>Password</th>
      <th>Link</th>
      <th>About</th>
      <th>Last played</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><img class="database-img" src="<%= profile.pic %>" alt="" /></td>
        <td><img class="database-img" src="<%= profile.cover_image %>" alt="" /></td>
        <td><%= profile.username %></td>
        <td><%= profile.password %></td>
        <td><%= profile.link %></td>
        <td><%= profile.about %></td>
        <td><%= profile.last_played_id %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
